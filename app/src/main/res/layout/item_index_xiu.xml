<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_yo_xiu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:text="这个人很yo秀哦~"
        android:textColor="#333333"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/touxiang" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/user_icon"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/user_icon"
            android:text="会飞的鱼"
            android:textColor="#333333"
            android:textSize="@dimen/dp_12" />

        <com.yoyogo.android.view.DrawableTextView
            android:id="@+id/zu_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/user_icon"
            android:text="180"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10"
            app:leftDrawable="@mipmap/zu_icon"
            app:leftDrawableHeight="@dimen/dp_12"
            app:leftDrawableWidth="@dimen/dp_12" />

        <com.yoyogo.android.view.DrawableTextView
            android:id="@+id/pai_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/zu_num"
            android:text="180"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10"
            app:leftDrawable="@mipmap/pai_icon"
            app:leftDrawableHeight="@dimen/dp_12"
            app:leftDrawableWidth="@dimen/dp_12" />

        <com.yoyogo.android.view.DrawableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/pai_num"
            android:text="180"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10"
            app:leftDrawable="@mipmap/like_icon"
            app:leftDrawableHeight="@dimen/dp_12"
            app:leftDrawableWidth="@dimen/dp_12" />

        <Button
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/attention_btn_bg_unselect"
            android:gravity="center"
            android:text="@string/str_add_attention"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_user_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />
</LinearLayout>