<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_view"
    android:orientation="vertical">

    <viewlist.SimpleActionBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/title_bar_background">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_centerVertical="true"
            android:background="@drawable/actionbar_menuitem_selector"
            android:padding="@dimen/dp_12"
            android:scaleType="centerInside"
            android:src="@mipmap/back_black" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_centerInParent="true"
    android:layout_height="match_parent">
        <TextView
           android:id="@+id/tupian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxWidth="140dp"
            android:singleLine="true"
            android:text="图片"
            android:textColor="@android:color/black"
            android:textSize="17sp" />
    <TextView
        android:id="@+id/shipin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxWidth="140dp"
        android:singleLine="true"
        android:text="视频"
        android:textColor="@android:color/black"
        android:textSize="17sp" />


</LinearLayout>

        <TextView
            android:id="@+id/quxiao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:maxWidth="140dp"
            android:singleLine="true"
            android:text="取消"
            android:textSize="17sp" />
        <View
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/cut_off_line" />
    </viewlist.SimpleActionBar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@android:color/white">
    <viewlist.DrawableTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawablePadding="@dimen/dp_5"
        android:text="原图"
        app:leftDrawable="@mipmap/classify_xuanzhong"
        app:leftDrawableHeight="@dimen/dp_20"
        app:leftDrawableWidth="@dimen/dp_20" />

    <TextView
        android:id="@+id/next_step_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/next_step_bg"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:text="下一步"
        android:textColor="@color/colorWhite" />
    <!--<ImageView-->
    <!--android:id="@+id/iv_folder_arrow"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:layout_gravity="center_vertical"-->
    <!--android:layout_marginBottom="-5dp"-->
    <!--android:layout_marginLeft="-8dp"-->
    <!--android:src="@mipmap/__picker_ic_gf_triangle_arrow" />-->

</RelativeLayout>
</LinearLayout>
